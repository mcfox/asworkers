#navbar-mobile.collapse.navbar-collapse
  %ul.nav.navbar-nav.mr-auto.float-left
    %li.nav-item.d-none.d-md-block
      %a.nav-link.nav-menu-main.menu-toggle.hidden-xs{:href => "javascript:void(0)"}
        %i.ft-menu
  %ul.nav.navbar-nav.float-right
    - if user_signed_in?
      %li.dropdown.dropdown-user.nav-item
        %a.dropdown-toggle.nav-link.dropdown-user-link{"data-toggle" => "dropdown", :href => "javascript:void(0)"}
          %span
            = current_user.email
        .dropdown-menu.dropdown-menu-right
          = link_to destroy_user_session_path, method: :delete, data: {confirm: t(:are_you_sure)}, class: 'dropdown-item' do
            %i.fa.fa-sign-out
            = t(:logout)
    - else
      %li.nav-item
        = link_to new_user_session_path, class: 'nav-link' do
          %i.fa.fa-sign-in
          %span= t(:login)